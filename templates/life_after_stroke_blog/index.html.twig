        </div>
    </section>
    <!-- End Breadcrumb Area -->

    <!-- Blog Area -->
    <section class="blog-four">
        <div class="container">
            <div class="row">
                <div class="col-lg-9 col-md-7">
                    <div class="row">
                        {% for post in posts %}
                            <div class="col-lg-6 col-md-12">
                                <div class="blog-box">
                                    <div class="blog-image">
                                        <a href="{{ path('single_post', {'slug' : post.slug}) }}"><img src="{{ vich_uploader_asset(post, 'imageFile') |
                                            imagine_filter('post_image') }}" alt="" class="img-fluid"></a>
                                    </div>
                                    <div class="blog-heading d-flex">
                                        <div class="blog-date text-center">
                                            <p></p>
                                        </div>
                                        <div class="heading-box">
                                            <h6><a href="{{ path('single_post', {'slug' : post.slug}) }}">{{ post.title }}</a></h6>
                                            <ul class="list-unstyled list-inline">
                                                <li class="list-inline-item"><i class="fa fa-user-o"></i><a href="#">Dr. IHIOF</a></li>
                                            </ul>
                                        </div>
                                    </div>
                                    <div class="blog-content">
                                        {{ post.content | striptags | u.truncate(200, '...', false) | raw }}
                                        <p class="d-flex justify-content-between pt-3">
                                            <a href="{{ path('single_post', {'slug' : post.slug}) }}" class="btn-link text-pink1">
                                                Lire l'article <i class="fa fa-angle-double-right"></i>
                                            </a>
                                            {{ post.createdAt | format_datetime('short', 'short', locale='fr', timezone='Africa/Douala') }}
                                        </p>
                                    </div>
                                </div>
                            </div>
                        {% endfor %}
