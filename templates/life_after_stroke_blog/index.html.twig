{% block body %}
    <!-- Breadcrumb Area -->
    <section class="breadcrumb-area main-blog text-center">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <h2>Blog</h2>
                    <ul class="list-unstyled list-inline">
                        <li class="list-inline-item"><a href="{{ path('app_home') }}">Accueil</a></li>
                        <li class="list-inline-item"><i class="fa fa-long-arrow-right"></i>Blog</li>
                    </ul>
                </div>
