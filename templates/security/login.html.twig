{% extends 'base.html.twig' %}
{#{% form_theme form 'bootstrap_4_layout.html.twig' %}#}

{% block title %}Connexion!{% endblock %}

{% block body %}

    <div class="container py-120">
        <div class="row">
            <div class="col-md-6 mx-auto">
                <form method="post">
                    {% if error %}
                        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                    {% endif %}

                    {#    {% if app.user %} #}
                    {#        <div class="mb-3"> #}
                    {#            Vous êtes connectés en tant que {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Déconnexion</a> #}
                    {#        </div> #}
                    {#    {% endif %} #}

                    <h1 class="h3 mb-3 font-weight-normal">Connexion</h1>

                    <div class="form-group">
                        <label for="inputEmail">Identifiant</label>
                        <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control rounded-pill py-4" autocomplete="off"
                               required
                               autofocus>
                    </div>

                    <div class="form-group">
                        <label for="inputPassword">Mot de passe</label>
                        <input type="password" name="password" id="inputPassword" class="form-control rounded-pill py-4" autocomplete="off" required>
                    </div>

                    <input type="hidden" name="_csrf_token"
                           value="{{ csrf_token('authenticate') }}"
                    >

                    <button class="hero-btn hero-btn-blue border-0 btn-block" type="submit">
                        Se Connecter
                    </button>
                </form>


            </div>
        </div>
    </div>

{% endblock %}
