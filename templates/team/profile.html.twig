{% extends 'base.html.twig' %}

{% block body %}
    {% set presentation = member.title ~ '. ' ~ member.firstname ~ ' ' ~ member.name %}

    <!-- Breadcrumb Area -->
    <section class="breadcrumb-area has-team text-center">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <h2>{{ presentation }}</h2>
                    <ul class="list-unstyled list-inline">
                        <li class="list-inline-item"><a href="{{ path('app_home') }}">Accueil</a></li>
                        <li class="list-inline-item"><i class="fa fa-long-arrow-right"></i>{{ presentation }}
