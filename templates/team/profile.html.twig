            <div class="row">
                <div class="col-md-4">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="doc-image">
                                <img src="{{ vich_uploader_asset(member, 'imageFile') | imagine_filter('profile_image_on_team_view') }}"
